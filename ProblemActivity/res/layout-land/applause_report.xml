<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/applause_gray_background_color"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="40dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/applause_bug_icon" />

        <Button
            android:id="@+id/applause_report_dialog_bug"
            android:layout_width="169dip"
            android:layout_height="39dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dip"
            android:background="@drawable/applause_button"
            android:padding="5dip"
            android:text="@string/applause_report_a_bug"
            android:textColor="@color/applause_content_ondark_text_color"
            android:textSize="18sp"
            android:typeface="sans" />

        <TextView
            android:layout_width="220dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/applause_problem_desc"
            android:textStyle="italic"
            android:typeface="sans" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="20dp"
        android:layout_height="240dip"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/applause_gray_background_color"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="40dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/applause_feedback_icon" />

        <Button
            android:id="@+id/applause_report_dialog_feedback"
            android:layout_width="169dip"
            android:layout_height="39dip"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dip"
            android:background="@drawable/applause_button"
            android:padding="5dip"
            android:text="Give Feedback"
            android:textColor="@color/applause_content_ondark_text_color"
            android:textSize="18sp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/applause_include_screenshot_text"
            android:layout_width="220dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/applause_feedback_desc"
            android:textStyle="italic"
            android:typeface="sans" />

    </LinearLayout>

</LinearLayout>