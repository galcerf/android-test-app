<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"

    style="@style/applause_alert_dialog"
    android:padding="15dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:background="@android:color/black"
        style="@style/applause_alert_dialog" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        style="@style/applause_alert_dialog">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Title"
            style="@style/applause_alert_dialog"
            android:id="@+id/applause_generic_dialog_title" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/applause_generic_dialog_body"
                tools:text="Body"
                android:textColor="@color/applause_gray_background_color"
                style="@style/applause_alert_dialog" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Positive button"
                style="@style/applause_alert_dialog"

                android:id="@+id/applause_generic_dialog_positive_btn" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Negative button"
                style="@style/applause_alert_dialog"
                android:id="@+id/applause_generic_dialog_negative_btn" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>

